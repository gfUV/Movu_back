{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
  "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["api/**/*", "server.ts", "env.d.ts"]
}